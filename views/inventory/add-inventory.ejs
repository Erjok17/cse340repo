<main>
    <h1>Add New Vehicle</h1>
    <%- messages() %>
    
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  
    <form action="/inv/add-inventory" method="post" class="form">
      <!-- Classification Dropdown -->
      <label for="classification_id">Classification:</label>
      <%- classificationList %>
      
      <!-- Make -->
      <label for="inv_make">Make:</label>
      <input type="text" name="inv_make" id="inv_make" required
             value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
      
      <!-- Model -->
      <label for="inv_model">Model:</label>
      <input type="text" name="inv_model" id="inv_model" required
             value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
      
      <!-- Description -->
      <label for="inv_description">Description:</label>
      <textarea name="inv_description" id="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
      
      <!-- Image Path -->
      <label for="inv_image">Image Path:</label>
      <input type="text" name="inv_image" id="inv_image" 
             value="/images/vehicles/no-image.png"
             readonly>
      
      <!-- Thumbnail Path -->
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" name="inv_thumbnail" id="inv_thumbnail" 
             value="/images/vehicles/no-image-tn.png"
             readonly>
      
      <!-- Price -->
      <label for="inv_price">Price:</label>
      <input type="number" name="inv_price" id="inv_price" step="0.01" required
             value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
      
      <!-- Year -->
      <label for="inv_year">Year:</label>
      <input type="number" name="inv_year" id="inv_year" min="1900" max="2099" required
             value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">
      
      <!-- Miles -->
      <label for="inv_miles">Miles:</label>
      <input type="number" name="inv_miles" id="inv_miles" min="0" required
             value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">
      
      <!-- Color -->
      <label for="inv_color">Color:</label>
      <input type="text" name="inv_color" id="inv_color" required
             value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">
      
      <button type="submit">Add Vehicle</button>
    </form>
  </main>
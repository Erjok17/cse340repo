<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <div id="wrapper">
        <!-- Banner Section -->
        <div class="banner-container">
            <img src="/images/site/cse340-banner.png" alt="CSE 340 Banner" class="banner-img" onerror="this.style.display='none'">
            <div class="banner-text">
                <h1>CSE 340 - Web Backend Development</h1>
                <p>Building secure, validated web applications</p>
            </div>
        </div>

        <!-- Original Header with Account Links -->
        <header class="main-header">
            <h1>CSE Motors</h1>
            <% if (typeof loggedin !== 'undefined' && loggedin) { %>
                <div class="account-links">
                    <a href="/account">My Account</a>
                    <a href="/account/logout">Logout</a>
                </div>
            <% } else { %>
                <a href="/account/login" class="account-link">My Account</a>
            <% } %>
            <a href="#main-content" class="skip-link">Skip to main content</a>
        </header>

        <%- include('../partials/navigation') %>

        <main id="main-content">
            <% if (typeof body !== 'undefined') { %>
                <%- body %>
            <% } else if (typeof content !== 'undefined') { %>
                <!-- Fallback for alternative content variable -->
                <%- content %>
            <% } else { %>
                <div class="default-content">
                    <h2>Welcome to CSE Motors</h2>
                    <p>Content could not be loaded. Please try again later.</p>
                </div>
            <% } %>
        </main>
        
        <%- include('../partials/footer') %>
    </div>
</body>
</html>